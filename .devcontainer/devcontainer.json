{
  "name": "Claude Code Sandbox (DinD)",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:America/Los_Angeles}",
      "CLAUDE_CODE_VERSION": "latest",
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.0"
    }
  },
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW",
    "-e",
    "LOCAL_WORKSPACE_FOLDER=${localWorkspaceFolder}"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-code-config-${devcontainerId},target=/home/node/.claude,type=volume",
    "type=bind,source=/var/run/docker.sock,target=/var/run/docker.sock",
    "type=bind,source=${localWorkspaceFolder}/../plugins,target=/plugins"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",

  // "postCreateCommand": "sudo usermod -aG docker node || true",

  "postStartCommand": "/usr/local/bin/enable-docker-sock.sh && sudo /usr/local/bin/init-firewall.sh && sudo /usr/local/bin/update-hosts.sh",

  "forwardPorts": [80, 443],
  "waitFor": "postStartCommand"
}
