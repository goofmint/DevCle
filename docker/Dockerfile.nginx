FROM nginx:1.25-alpine

# Copy custom nginx configuration
COPY nginx/nginx.conf /etc/nginx/nginx.conf

# Copy SSL certificates
COPY certs/devcle.com.pem /etc/nginx/certs/server.crt
COPY certs/devcle.com-key.pem /etc/nginx/certs/server.key

# Copy static files
COPY core/public /var/www/public

# Expose ports
EXPOSE 80 443

# Use default nginx entrypoint and command
