# .env.example
# Environment variable template for DevCle
# Copy this file to .env and update the values

# ============================================
# Database Configuration
# ============================================
# PostgreSQL database name
POSTGRES_DB=devcle
# PostgreSQL user
POSTGRES_USER=devcle
# PostgreSQL password (MUST be changed in production)
# Generate a strong password: openssl rand -base64 32
POSTGRES_PASSWORD=change_this_password_in_production
# Full database connection URL
DATABASE_URL=postgresql://devcle:change_this_password_in_production@postgres:5432/devcle

# ============================================
# Redis Configuration
# ============================================
# Redis password (MUST be changed in production)
# Generate a strong password: openssl rand -base64 32
# IMPORTANT: Always use password authentication for Redis in production
REDIS_PASSWORD=change_this_redis_password_in_production
# Full Redis connection URL (with password)
# Format: redis://:<password>@<host>:<port>/<db>
# Used for BullMQ (job queue), session storage, and caching
REDIS_URL=redis://:change_this_redis_password_in_production@redis:6379/0

# ============================================
# Application Configuration
# ============================================
# Node environment (production, development, test)
NODE_ENV=production
# Session secret for cookie signing (MUST be changed in production)
# Generate a strong secret: openssl rand -base64 32
SESSION_SECRET=change_this_secret_in_production
# Encryption key for sensitive data (S3 keys, SMTP passwords, AI API keys)
# MUST be exactly 32 bytes (256 bits) when base64-decoded
# Generate: openssl rand -base64 32
# IMPORTANT: Never commit this key. Use secrets manager in production.
ENCRYPTION_KEY=change_this_encryption_key_in_production
# Application domain (used for nginx server_name and application URLs)
APP_DOMAIN=devcle.com
# Plugin internal secret for HMAC token signing (MUST be changed in production)
# Generate: openssl rand -base64 32
# Used for plugin-to-core API authentication
PLUGIN_INTERNAL_SECRET=change_this_plugin_secret_in_production

# ============================================
# Optional: Monitoring and Analytics
# ============================================
# Sentry DSN for error tracking (production only)
# SENTRY_DSN=

# PostHog API key for anonymous analytics (production only)
# POSTHOG_API_KEY=
